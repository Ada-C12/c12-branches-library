<h1 class="index-header">The Index Action: The place where you get all of the authors!</h1>

<section>
  <h2>List of all Authors</h2>
  <ul>
    <% @authors.each do |author| %>
      <li>
        <%= link_to author.name, author_path( author.id ) %>
        <%= link_to "(Delete)", author_path( author.id ), method: :delete, data: { confirm: "Are YOU sure?" }, class: "index-delete-link" %>
      </li>
    <% end %>
  </ul>
</section>