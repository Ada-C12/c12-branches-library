<h1 class="index-header">The Index Action: The place where you get all of the books!</h1>

<section>
  <h2>List of all Books</h2>
  <ul>
    <% @books.each do |book| %>
      <li>
        <%= link_to book.title, book_path( book.id ) %> by <%= book.author.name %>
        <%= link_to "(Delete)", book_path( book.id ), method: :delete, data: { confirm: "Are YOU sure?" }, class: "index-delete-link" %>
      </li>
    <% end %>
  </ul>
</section>