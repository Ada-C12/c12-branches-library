<header class="show-header">
  <h1><%=@book.title%></h1>
  <h2>by <%=@book.author.name%></h2>
  <%= link_to "Edit this book!", edit_book_path(@book.id) %>
</header>

<section class="show-details">

  <p>
    About this book: <%= @book.description %>
  </p>

  <p>
    This book was published <%= readable_date(@book.publication_date) %>
  </p>

  <%= image_tag "https://www.top13.net/wp-content/uploads/2016/10/most-beautiful-cats-world-11.jpg", alt: "The most beautiful cat in the world (A cat with long and dark fur staring into the camera directly", class: "show-cat" %>

</section>